@model UpdateDiscountDto

@{
    ViewData["Title"] = "DiscountUpdate";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Günün İndirimleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Günün İndirimi Güncelleme</div>
						</div>
						<input type="hidden" asp-for="DiscountID" />
						<div class="card-body">
							<div class="form-group">
								<label asp-for="DiscountTitle">Ürün Adı</label>
								<input asp-for="DiscountTitle" type="text" class="form-control" id="DiscountTitle" placeholder="Ürün Adını Giriniz">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label asp-for="DiscountAmount">İndirim Oranı</label>
								<input asp-for="DiscountAmount" type="text" class="form-control" id="DiscountAmount" placeholder="İndirim Oranını Giriniz">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label asp-for="DiscountImageUrl">Ürün Görseli</label>
								<input asp-for="DiscountImageUrl" type="text" class="form-control" id="DiscountImageUrl" placeholder="Ürün Görseli URL Giriniz">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label asp-for="DiscountDescription">Açıklama</label>
								<input asp-for="DiscountDescription" type="text" class="form-control" id="DiscountDescription" placeholder="Açıklama Giriniz">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-success">Kaydet</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

@model SignalRWebUI.Dtos.CategoryDtos.CreateCategoryDto

@{
    ViewData["Title"] = "CategoryCreate";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Kategori</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Kategori Girişi</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="CategoryName">Kategori Adı</label>
								<input asp-for="CategoryName" type="text" class="form-control" id="CategoryName" placeholder="Kategori Adını Giriniz">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-success">Ekle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

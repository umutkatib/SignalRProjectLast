@model UpdateSociaMediaDto

@{
    ViewData["Title"] = "SocialMediaUpdate";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Sosyal Medya</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Sosyal Medya Güncelleme</div>
						</div>
						<input type="hidden" asp-for="SocialMediaID" />
						<div class="card-body">
							<div class="form-group">
								<label asp-for="SocialMediaTitle">Başlık</label>
								<input asp-for="SocialMediaTitle" type="text" class="form-control" id="SocialMediaTitle" placeholder="Başlık Giriniz">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label asp-for="SocialMediaIcon">Icon</label>
								<input asp-for="SocialMediaIcon" type="text" class="form-control" id="SocialMediaIcon" placeholder="Icon Giriniz">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label asp-for="SocialMediaUrl">Link</label>
								<input asp-for="SocialMediaUrl" type="text" class="form-control" id="SocialMediaUrl" placeholder="Link Giriniz">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-success">Ekle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

